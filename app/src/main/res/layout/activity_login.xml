<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guangwai.project.ystumad.login.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3e6c91"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/app_title"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"
            android:text="@string/app_welcome"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/practice_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_common_select"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/app_practice_mode"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/break_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_common_select"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/app_break_mode"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>
